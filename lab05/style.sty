/* The variables that control the margins of the webpage */
min_px = 0px
max_px = 25px
border = 0pt
black = #000000

body
    font: 24px Helvetica
    background: #999999

/* Controls how the flexboxes are made and how they look */

#main
    min-height: 800px
    margin: min_px
    padding: min_px
    display: flex
    flex-flow: row
    article
        margin: min_px
        padding: max_px
        border: 1px solid black
        border-radius: border
        background: #dddd88
        flex: 3 1 60%
        order: 2
    nav
        margin: min_px
        padding: max_px
        border: 1px solid black
        border-radius: border
        background: #ccccff
        flex: 1 6 20%
        order: 1
        text-align: right
    aside
        margin: min_px
        padding: max_px
        border: 1px solid black
        border-radius: border
        background: #ccccff
        flex: 1 6 20%
        order: 3
        font-style: italic

header
    display: block
    margin: min_px
    padding: max_px
    min-height: 100px
    border: 1px solid black
    border-radius: border
    background: #ffeebb
    font-weight: bold
    font-size: 40px

footer
    display: block
    margin: min_px
    padding: max_px
    min-height: 100px
    border: 1px solid black
    border-radius: border
    background: #ffeebb
    font-weight: lighter
    font-size: 15px


/* Too narrow to support three columns */
@media all and (max-width: 640px)
    #main, #page
        flex-direction: column

    
    #main > nav, #main > aside, header, footer
        min-height: 50px
        max-height: 50px


    #main > nav
        text-align: left


